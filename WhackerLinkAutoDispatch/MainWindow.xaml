<Window x:Class="WhackerLinkAutoDispatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WhackerLink AVD" Height="600" Width="1000" Background="#1E1E2F">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="WhackerLink AVD"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#FFFFFF"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <!-- Load Template Button -->
        <Button Content="Load Template" Height="40" Width="150" Margin="10" HorizontalAlignment="Left"
                VerticalAlignment="Top" Click="LoadTemplate_Click"
                Background="#00AEEF" Foreground="White" FontSize="16" FontWeight="SemiBold"
                BorderThickness="0" Cursor="Hand"/>

        <!-- Channel Selection Dropdown -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
            <TextBlock Text="Select Channel:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="16"/>
            <ComboBox Name="ChannelSelector" Width="300" Height="30"/>
        </StackPanel>

        <!-- Dynamic Fields Section -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel Name="DynamicFieldsPanel"/>
        </ScrollViewer>

        <!-- Bottom Buttons: Clear & Dispatch Now -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Top">
            <Button Content="Clear" Height="40" Width="150" Margin="0,0,10,0"
                    Background="#FFB74D" Foreground="White" FontSize="16" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand" Click="ClearFields_Click"/>

            <Button Content="Dispatch Now" Height="40" Width="150"
                    Background="#FF4B4B" Foreground="White" FontSize="16" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand" Click="DispatchNow_Click"/>
        </StackPanel>
    </Grid>
</Window>
